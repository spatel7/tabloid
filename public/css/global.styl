@import 'nib'

html
body
  &.disabled
    overflow-x hidden
    overflow-y hidden

body
  font 14px Grande, Helvetica, Arial, sans-serif
  margin 0px
  background-color #e0e0e0
  background-repeat no-repeat
  background-attachment fixed

a
  color #00B7FF

ul
  list-style none
  margin 0
  padding 0

.container
  position absolute
  width 100%
  height 100%
  display table

  > .middle
    display table-cell
    vertical-align top
    margin-top 20px

    > .main
      width 975px
      margin auto

@media(max-width: 9900px)
  .container
    .middle
      .main
        width 645px
        margin auto

@media(max-width: 650px)
  .container
    .middle
      .main
        width 100%
        margin auto