extends global

block styles
  link(rel='stylesheet' href='/css/index.css')

block scripts
  script(src='text/javascript', src='/js/index.js')

block content
  div.login
    form(id='loginForm' action='/login' method='POST')
      ul
        li
          input(type='text', id='username', placeholder='username')
        li
          input(type='password', id='password', placeholder='*********')
        li
          button(type='submit', id='login', value='Login') Login
  div.column
    h1 Welcome to Tabloid
    img(src='/img/favicon.ico').icon
    p Beautiful bookmarks for everything. 
      a(href='/register') Get started
    p Already have an account? 
      a(href='/login').loginLink Login

    img(src='/img/presentation3.png').desktopImage
    img(src='/img/presentation_mobile.png').mobileImage